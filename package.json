{
  "name": "tora",
  "version": "1.0.0",
  "description": "tora",
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EYHN/Tora.git"
  },
  "author": "EYHN",
  "keywords": [
    ""
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty && babel lib -d lib --source-maps inline",
    "test": "npm run build && mocha --compilers ts:ts-node/register --recursive 'test/**/*-spec.ts'",
    "coverage": "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --compilers ts:ts-node/register --recursive 'test/**/*.test.ts'",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "dev": "cross-env NODE_ENV=development node ./lib/index.js",
    "start": "cross-env NODE_ENV=production node ./lib/index.js"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.1",
    "chai-as-promised": "^6.0.0",
    "cookie-parser": "^1.4.3",
    "errorhandler": "^1.5.0",
    "express": "^4.15.2",
    "express-session": "^1.15.2",
    "fs-extra": "^3.0.0",
    "mongoose": "^4.9.7",
    "nconf": "^0.8.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.10.0",
    "winston": "^2.3.1",
    "cross-env": "^4.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/chai": "^3.0.0",
    "@types/chai-as-promised": "0.0.30",
    "@types/cookie-parser": "^1.3.30",
    "@types/errorhandler": "^0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "^0.0.32",
    "@types/fs-extra": "^3.0.0",
    "@types/mocha": "^2.0.0",
    "@types/mongoose": "^4.7.11",
    "@types/nconf": "0.0.34",
    "@types/node": "^7.0.0",
    "@types/react": "^15.0.24",
    "@types/react-dom": "^15.5.0",
    "@types/sinon": "^2.1.3",
    "@types/sinon-chai": "^2.7.27",
    "@types/supertest": "^2.0.0",
    "@types/winston": "^2.3.1",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "chai": "^3.0.0",
    "coveralls": "^2.0.0",
    "mocha": "^3.0.0",
    "nyc": "^10.0.0",
    "require-again": "^2.0.0",
    "rimraf": "^2.0.0",
    "supertest": "^3.0.0",
    "ts-node": "^3.0.0",
    "tslint": "^5.0.0",
    "typescript": "^2.0.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
